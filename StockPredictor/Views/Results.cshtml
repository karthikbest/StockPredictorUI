@model StockPredictor.Models.StockPredictionViewModel

@{
    ViewData["Title"] = "Prediction Results";
}

<div class="container mt-5">
    <h1 class="text-center">Prediction Results</h1>

    <p><strong>Company:</strong> @Model.CompanyName</p>

    <h3>Predicted Prices:</h3>
    <ul>
        @foreach (var price in Model.PredictedPrices)
        {
            <li>@price.ToString("C")</li>
        }
    </ul>

    <h3>Recommendation:</h3>
    <p class="font-weight-bold text-success">@Model.Recommendation</p>

    <a href="/" class="btn btn-secondary mt-4">Go Back</a>
</div>
